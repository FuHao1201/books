<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fuhao.books.dao.BuyDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.fuhao.books.domain.Buy">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="book_id" property="bookId" />
        <result column="book_num" property="bookNum" />
        <result column="sum" property="sum" />
        <result column="create_time" property="createTime" />
        <result column="logic_delete_flag" property="logicDeleteFlag" />
    </resultMap>
    
    <select id="listByUserId" resultType="com.fuhao.books.form.BuyForm">
SELECT
	buy.*,
	book.book_name,
	book.price,
	book.book_pictures,
	book.logic_delete_flag
FROM
	buy
	JOIN book ON buy.book_id = book.id
	where buy.user_id = #{buy.userId}
	and buy.logic_delete_flag = "0"
    </select>
</mapper>
