<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fuhao.books.dao.UserDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.fuhao.books.domain.User">
        <id column="id" property="id" />
        <result column="head" property="head" />
        <result column="loginname" property="loginname" />
        <result column="name" property="name" />
        <result column="password" property="password" />
        <result column="status" property="status" />
        <result column="sex" property="sex" />
        <result column="identity" property="identity" />
        <result column="phone" property="phone" />
        <result column="logic_delete_flag" property="logicDeleteFlag" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    <select id="login" resultType="com.fuhao.books.domain.User">
SELECT
	id,loginname,password,status
FROM
	`user` 
WHERE
	logic_delete_flag = 0 and
	loginname = #{user.loginname}
    </select>
    <select id="listAll" resultType="com.fuhao.books.form.UserForm">
SELECT
	* 
FROM
	`user` 
WHERE
	logic_delete_flag = 0 
	<if test="user.loginname != null and user.loginname != ''">
	and loginname like %#{user.loginname}%
	</if>
	<if test="user.name != null and user.name != ''">
	and name like %#{user.name}%
	</if>
	<if test="user.identity != null and user.identity != ''">
	and identity = #{user.identity}
	</if>
	<if test="user.status != null and user.status != ''">
	and status = #{user.status}
	</if>

    </select>
    <select id="getCount" resultType="com.fuhao.books.form.UserForm">
SELECT
	count(*) as count
FROM
	`user` 
WHERE
	logic_delete_flag = 0 
	<if test="user.loginname != null and user.loginname != ''">
	and loginname like %#{user.loginname}%
	</if>
	<if test="user.name != null and user.name != ''">
	and name like %#{user.name}%
	</if>
	<if test="user.identity != null and user.identity != ''">
	and identity = #{user.identity}
	</if>
	<if test="user.status != null and user.status != ''">
	and status = #{user.status}
	</if>
    </select>
</mapper>
